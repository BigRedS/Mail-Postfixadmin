#! /usr/bin/perl

use strict;
use Vpostmail;


my $d = Vpostmail->new();

my $domain = $ARGV[0];
if ($domain eq ''){
	foreach($d->listDomains){
		print "$_\n";
	}
	exit 0;
}

$d->setDomain($domain);
my %info = $d->getDomainInfo();
foreach(sort(keys(%info))){
	unless($_ =~ /^mailboxes$/){
		printf('%-14s%s', $_, $info{$_});
		print "\n";
	}
}

